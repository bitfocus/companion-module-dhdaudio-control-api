{
  "name": "dhdaudio-control-api",
  "version": "1.0.1",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "postinstall": "husky",
    "format": "prettier -w .",
    "package": "run build && companion-module-build",
    "build": "rimraf dist && run build:main",
    "build:main": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint:raw": "eslint",
    "lint": "run lint:raw ."
  },
  "author": "DHD audio GmbH <dhd@dhd-audio.de>",
  "license": "MIT",
  "homepage": "https://developer.dhd.audio/",
  "repository": {
    "type": "git",
    "url": "https://github.com/bitfocus/companion-module-dhdaudio-control-api.git"
  },
  "bugs": {
    "url": "https://github.com/bitfocus/companion-module-dhdaudio-control-api/issues",
    "email": "dhd@dhd-audio.de"
  },
  "engines": {
    "node": "^22.14",
    "yarn": "^4"
  },
  "dependencies": {
    "@companion-module/base": "~1.12.1",
    "@dhdaudio/control-api": "^1.0.3",
    "remeda": "^2.31.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@companion-module/tools": "^2.3.0",
    "@types/node": "^24.3.1",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.42.0"
  },
  "prettier": "@companion-module/tools/.prettierrc.json",
  "lint-staged": {
    "*.{css,json,md,scss}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "yarn lint:raw --fix"
    ]
  },
  "packageManager": "yarn@4.9.1"
}
